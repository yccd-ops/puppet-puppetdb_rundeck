[Unit]
Description=puppetdb_rundeck service
After=syslog.target network.target

[Service]
Type=simple
ExecStart=/usr/local/bin/puppetdb_rundeck --port <%= @port %> --pdbhost <%= @puppetdb_host %> --pdbport <%= @puppetdb_port %>
PIDFile=/var/run/puppetdb_rundeck.pid

[Install]
WantedBy=multi-user.target
